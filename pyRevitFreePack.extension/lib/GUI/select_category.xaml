<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Selecionar Categoria" Height="180" Width="350"
    WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20,20,20,20">

        <!-- Dropdown para selecionar a categoria -->
        <DockPanel>
            <TextBlock 
                Text="Categoria:"  
                FontSize="16" 
                Margin="0,0,10,0" 
                Width="100"/>
            <ComboBox x:Name="UIe_combobox" Height="25" FontSize="16"/>
        </DockPanel>

        <Border Height="20"/>

        <!-- BotÃ£o Confirmar -->
        <Button x:Name="UIe_button" 
                Content="CONFIRMAR" 
                Click="UIE_button_run"
                Height="40" 
                FontWeight="Bold" 
                FontSize="14"/>
    </StackPanel>
</Window>
